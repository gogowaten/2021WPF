<Window x:Class="_20210217_レイアウトListboxと画像.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20210217_レイアウトListboxと画像"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <DockPanel>
      <Menu DockPanel.Dock="Top">
        <MenuItem Header="test" Click="MenuItem_Click"/>
        <MenuItem Header="add" Click="MenuItem_Click_1"/>

      </Menu>
      <DockPanel>
        
        <ListBox x:Name="MyListBox" ItemsSource="{Binding}" SelectionMode="Extended" SelectionChanged="MyListBox_SelectionChanged">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=IsSave}"/>
                <TextBlock Text="{Binding Path=Name}"/>
                <!--<Image Source="{Binding Path=Image}"/>-->
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
        <Image x:Name="MyImage" Stretch="None" Source="{Binding}"/>
      </DockPanel>
    </DockPanel>
  </Grid>
</Window>
