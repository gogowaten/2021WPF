<Window x:Class="_20210928_SSIM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20210928_SSIM"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        AllowDrop="True"
        Top="0" Left="0"
        Drop="Window_Drop">
  <Grid>
    <DockPanel UseLayoutRounding="True">
      <Menu DockPanel.Dock="Top" HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal">
          <Button x:Name="MyButtonTest" Content="test" Click="MyButtonTest_Click"/>
          <Button x:Name="MyButtonSIMM" Content="SIMM" Click="MyButtonSIMM_Click"/>
        </StackPanel>
      </Menu>
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
          <Image x:Name="MyImageOrigin" Stretch="None" VerticalAlignment="Top"/>
          <Image x:Name="MyImage2nd" Stretch="None" VerticalAlignment="Top"/>
        </Grid>

      </ScrollViewer>
    </DockPanel>
  </Grid>
</Window>
