<Window x:Class="_2021122616_Thumb_ItemsControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2021122616_Thumb_ItemsControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid x:Name="MyGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="150"/>
    </Grid.ColumnDefinitions>
    <Canvas x:Name="MyCanvas"/>
    <StackPanel Grid.Column="1" >
      <TextBlock Text="{Binding Path=Left, StringFormat=Left \= 0}"/>
      <Button x:Name="ButtonTest" Content="test" Click="ButtonTest_Click"/>
    </StackPanel>
  </Grid>
</Window>
