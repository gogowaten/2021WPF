<Window x:Class="_20211220.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20211220"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <DockPanel>
      <StackPanel DockPanel.Dock="Right" Width="150">
        <Button x:Name="ButtonAdd" Content="Add" Click="ButtonAdd_Click"/>
        <Button x:Name="ButtonCheck" Content="check" Click="ButtonCheck_Click"/>
        <Label Content="{Binding Left}"/>
        <TextBlock Text="{Binding Left}"/>
      </StackPanel>
      <Canvas x:Name="MyCanvas"/>
    </DockPanel>
  </Grid>
</Window>
