<Window x:Class="_20211213_FormattedTextと文字の装飾.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20211213_FormattedTextと文字の装飾"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
  <Grid UseLayoutRounding="True">
    <StackPanel>
      <TextBox x:Name="MyTextBox" Text="普通のTextBox" FontSize="50" Margin="15" Foreground="Gray"/>
      <local:FormattedTextBox1 Text="太字Bold Italic" FontSize="50" Margin="15"/>
      <local:FormattedTextBox3 Text="Black" FontSize="50" Margin="15"/>
      <local:FormattedTextBox4 Text="上線オーバーラインOverLine" FontSize="50" Margin="15" FontWeight="Bold"/>
      <local:FormattedTextBox5 Text="取り消し線Strikethrough" FontSize="50" Margin="15"/>
      <local:FormattedTextBox2 Text="二重下線PenOffset" FontSize="50" Margin="15"/>
      <local:FormattedTextBox6 Text="全線AllTextDecorationLocation" FontSize="50" Margin="15"/>
      <local:FormattedTextBox7 Text="装飾の範囲指定（3文字目から4文字）" FontSize="50" Margin="15"/>
      <Image x:Name="MyImage" Stretch="None"/>
    </StackPanel>
  </Grid>
</Window>
